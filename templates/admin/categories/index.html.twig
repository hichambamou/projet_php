{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container mx-auto px-4 py-16">
        <div class="text-center">
            <h1 class="display-4 gradient-text mb-4">Gestion des catégories</h1>
            <p class="lead text-white/90 mb-8">Organisez vos voitures par catégories</p>
            <nav class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_index') }}" class="text-white/80 hover:text-white">Admin</a>
                </li>
                <li class="breadcrumb-item text-white">Catégories</li>
            </nav>
        </div>
    </div>
</section>

<section class="py-8">
    <div class="container mx-auto px-4">
        <div class="d-flex justify-content-between align-items-center mb-6">
            <h2 class="fs-4 fw-bold">Liste des catégories</h2>
            <a href="{{ path('admin_categorie_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Ajouter une catégorie
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row g-4">
            {% for categorieData in categories %}
                {% set categorie = categorieData[0] %}
                {% set voitureCount = categorieData.voitureCount %}
                <div class="col-lg-4 col-md-6">
                    <div class="card card-hover h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h3 class="h5 fw-bold mb-0">{{ categorie.nom }}</h3>
                                <span class="badge bg-primary">{{ voitureCount }} voiture{{ voitureCount > 1 ? 's' : '' }}</span>
                            </div>
                            
                            {% if categorie.description %}
                                <p class="text-muted small mb-4">{{ categorie.description|slice(0, 100) }}{% if categorie.description|length > 100 %}...{% endif %}</p>
                            {% endif %}
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    Créée le {{ categorie.createdAt|date('d/m/Y') }}
                                </small>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    {% if voitureCount == 0 %}
                                        <form method="post" action="{{ path('admin_categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="text-center py-8">
                        <i class="bi bi-folder-x display-1 text-muted mb-4"></i>
                        <h3 class="h5 fw-bold text-muted mb-2">Aucune catégorie</h3>
                        <p class="text-muted mb-4">Commencez par ajouter votre première catégorie.</p>
                        <a href="{{ path('admin_categorie_new') }}" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-2"></i>Ajouter une catégorie
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
