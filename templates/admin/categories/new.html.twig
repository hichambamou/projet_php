{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="container mx-auto px-4 py-16">
        <div class="text-center">
            <h1 class="display-4 gradient-text mb-4">Nouvelle catégorie</h1>
            <p class="lead text-white/90 mb-8">Ajoutez une nouvelle catégorie de voiture</p>
            <nav class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_index') }}" class="text-white/80 hover:text-white">Admin</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('admin_categorie_index') }}" class="text-white/80 hover:text-white">Catégories</a>
                </li>
                <li class="breadcrumb-item text-white">Nouveau</li>
            </nav>
        </div>
    </div>
</section>

<section class="py-8">
    <div class="container mx-auto px-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body p-6">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="mb-4">
                            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-input'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div class="mb-6">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-input'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_categorie_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-2"></i>Créer la catégorie
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
