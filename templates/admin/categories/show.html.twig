{% extends 'base.html.twig' %}

{% block title %}{{ categorie.nom }} - Détails{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 py-8">
    <div class="container mx-auto px-4 max-w-6xl">
        {# Breadcrumb #}
        <nav class="mb-6" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm">
                <li>
                    <a href="{{ path('app_admin_index') }}" class="text-slate-600 hover:text-primary-600 transition-colors">
                        <i class="bi bi-house-door-fill"></i> Dashboard
                    </a>
                </li>
                <li class="text-slate-400">/</li>
                <li>
                    <a href="{{ path('admin_categorie_index') }}" class="text-slate-600 hover:text-primary-600 transition-colors">
                        Catégories
                    </a>
                </li>
                <li class="text-slate-400">/</li>
                <li class="text-slate-900 font-medium">{{ categorie.nom }}</li>
            </ol>
        </nav>

        {# Header Card #}
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-primary-600 to-primary-700 px-8 py-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h1 class="text-3xl font-bold text-white flex items-center">
                            <i class="bi bi-tag-fill mr-3"></i>
                            {{ categorie.nom }}
                        </h1>
                        {% if categorie.description %}
                            <p class="text-primary-100 mt-2">{{ categorie.description }}</p>
                        {% endif %}
                    </div>
                    <div class="flex items-center space-x-3">
                        <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 rounded-lg font-semibold hover:bg-primary-50 transition-all duration-300 shadow-lg">
                            <i class="bi bi-pencil-fill mr-2"></i>
                            Modifier
                        </a>
                    </div>
                </div>
            </div>

            {# Statistics #}
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-6 border border-blue-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-blue-600 font-medium mb-1">Total Voitures</p>
                                <p class="text-4xl font-bold text-blue-900">{{ categorie.voitures|length }}</p>
                            </div>
                            <div class="w-16 h-16 bg-blue-200 rounded-full flex items-center justify-center">
                                <i class="bi bi-car-front-fill text-blue-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border border-green-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-green-600 font-medium mb-1">Disponibles</p>
                                <p class="text-4xl font-bold text-green-900">
                                    {% set available = 0 %}
                                    {% for voiture in categorie.voitures %}
                                        {% if voiture.disponible %}
                                            {% set available = available + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    {{ available }}
                                </p>
                            </div>
                            <div class="w-16 h-16 bg-green-200 rounded-full flex items-center justify-center">
                                <i class="bi bi-check-circle-fill text-green-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-6 border border-purple-200">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-purple-600 font-medium mb-1">En Location</p>
                                <p class="text-4xl font-bold text-purple-900">
                                    {{ categorie.voitures|length - available }}
                                </p>
                            </div>
                            <div class="w-16 h-16 bg-purple-200 rounded-full flex items-center justify-center">
                                <i class="bi bi-calendar-check-fill text-purple-600 text-2xl"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Cars List #}
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="px-8 py-6 border-b border-slate-200">
                <h2 class="text-2xl font-bold text-slate-900 flex items-center">
                    <i class="bi bi-car-front-fill mr-3 text-primary-600"></i>
                    Voitures de cette Catégorie
                </h2>
            </div>

            <div class="p-8">
                {% if categorie.voitures is empty %}
                    <div class="text-center py-12">
                        <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="bi bi-car-front text-slate-400 text-4xl"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-slate-900 mb-2">Aucune voiture</h3>
                        <p class="text-slate-600 mb-6">Cette catégorie ne contient pas encore de voitures.</p>
                        <a href="{{ path('app_voiture_new') }}" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-all">
                            <i class="bi bi-plus-circle-fill mr-2"></i>
                            Ajouter une Voiture
                        </a>
                    </div>
                {% else %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for voiture in categorie.voitures %}
                            <div class="bg-white border border-slate-200 rounded-xl overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:scale-105">
                                {# Car Image #}
                                <div class="relative h-48 bg-slate-100">
                                    {% if voiture.images is not empty %}
                                        <img src="{{ asset('uploads/voitures/' ~ voiture.images[0].nomFichier) }}" 
                                             alt="{{ voiture.marque }} {{ voiture.modele }}" 
                                             class="w-full h-full object-cover">
                                    {% else %}
                                        <div class="w-full h-full flex items-center justify-center">
                                            <i class="bi bi-car-front text-slate-300 text-6xl"></i>
                                        </div>
                                    {% endif %}
                                    
                                    {# Availability Badge #}
                                    <div class="absolute top-3 right-3">
                                        {% if voiture.disponible %}
                                            <span class="px-3 py-1 bg-green-500 text-white text-xs font-semibold rounded-full">
                                                Disponible
                                            </span>
                                        {% else %}
                                            <span class="px-3 py-1 bg-red-500 text-white text-xs font-semibold rounded-full">
                                                Louée
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>

                                {# Car Info #}
                                <div class="p-5">
                                    <h3 class="text-lg font-bold text-slate-900 mb-2">
                                        {{ voiture.marque }} {{ voiture.modele }}
                                    </h3>
                                    <div class="flex items-center justify-between mb-4">
                                        <span class="text-2xl font-bold text-primary-600">
                                            {{ voiture.prixParJour }} DH
                                        </span>
                                        <span class="text-sm text-slate-500">/ jour</span>
                                    </div>
                                    
                                    {# Quick Info #}
                                    <div class="grid grid-cols-2 gap-2 mb-4 text-sm text-slate-600">
                                        <div class="flex items-center">
                                            <i class="bi bi-calendar text-slate-400 mr-1"></i>
                                            {{ voiture.annee }}
                                        </div>
                                        <div class="flex items-center">
                                            <i class="bi bi-fuel-pump text-slate-400 mr-1"></i>
                                            {{ voiture.carburant }}
                                        </div>
                                    </div>

                                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="block w-full text-center px-4 py-2 bg-primary-600 text-white rounded-lg font-semibold hover:bg-primary-700 transition-all">
                                        Voir Détails
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        {# Back Button #}
        <div class="mt-6">
            <a href="{{ path('admin_categorie_index') }}" class="inline-flex items-center px-6 py-3 bg-white text-slate-700 rounded-lg font-semibold hover:bg-slate-50 shadow-md transition-all">
                <i class="bi bi-arrow-left mr-2"></i>
                Retour à la Liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
