{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Admin Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Cars</h5>
                    <p class="card-text">Add, edit, or delete cars.</p>
                    <a href="{{ path('app_voiture_index') }}" class="btn btn-primary">Go to Cars</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">View and manage all users.</p>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-primary">Go to Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reservations</h5>
                    <p class="card-text">View all reservations.</p>
                    <a href="{{ path('app_reservation_index') }}" class="btn btn-primary">Go to Reservations</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}