{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Manage Users</h1>
    <a href="{{ path('app_admin_user_new_client') }}" class="btn btn-success mb-3">Add Client</a>
    <a href="{{ path('app_admin_user_new_admin') }}" class="btn btn-warning mb-3">Add Admin</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% if user is instanceof('App\\Entity\\Administrateur') %}
                        Admin
                    {% else %}
                        Client
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <form method="post" action="{{ path('app_admin_user_delete', {'id': user.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}