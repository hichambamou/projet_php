{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation - MarokiCars{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h2 class="card-title">Réservation #{{ reservation.id }}</h2>
                        <span class="badge bg-{{ reservation.statut == 'confirmee' ? 'success' : (reservation.statut == 'annulee' ? 'danger' : 'warning') }} fs-6">
                            {{ reservation.statut|replace({'_': ' '})|title }}
                        </span>
                    </div>
                    
                    <div class="mb-4">
                        <h5>Véhicule réservé</h5>
                        <div class="d-flex align-items-center">
                            {% if reservation.voiture.photoPrincipale %}
                                <img src="{{ reservation.voiture.photoPrincipale }}" class="img-thumbnail me-3" style="width: 150px; height: 100px; object-fit: cover;" alt="{{ reservation.voiture.marque }}">
                            {% endif %}
                            <div>
                                <h6 class="mb-0">{{ reservation.voiture.marque }} {{ reservation.voiture.modele }}</h6>
                                <p class="text-muted mb-0">{{ reservation.voiture.annee }}</p>
                                <a href="{{ path('app_voiture_show', {'id': reservation.voiture.id}) }}" class="btn btn-sm btn-outline-primary mt-2">Voir le véhicule</a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Dates de location</h5>
                            <p class="mb-1"><i class="bi bi-calendar-event"></i> <strong>Début:</strong> {{ reservation.dateDebut|date('d/m/Y') }}</p>
                            <p class="mb-0"><i class="bi bi-calendar-check"></i> <strong>Fin:</strong> {{ reservation.dateFin|date('d/m/Y') }}</p>
                            <p class="text-muted mt-2">
                                Durée: {{ reservation.dateDebut.diff(reservation.dateFin).days + 1 }} jour(s)
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5>Informations</h5>
                            {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                                <p class="mb-1"><i class="bi bi-person"></i> <strong>Client:</strong> {{ reservation.client.nom }}</p>
                                <p class="mb-1"><i class="bi bi-envelope"></i> {{ reservation.client.email }}</p>
                                {% if reservation.client.telephone %}
                                    <p class="mb-0"><i class="bi bi-telephone"></i> {{ reservation.client.telephone }}</p>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">Montant total</h5>
                                <h3 class="text-primary mb-0">{{ reservation.montant }} MAD</h3>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        {% if reservation.statut != 'annulee' %}
                            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-primary">Modifier</a>
                        {% endif %}
                        <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
