{% extends 'base.html.twig' %}

{% block title %}Catégories de voitures - MarokiCars{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section py-20 lg:py-28 relative">
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center animate-fade-in">
            <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-4 py-2 mb-6">
                <i class="bi bi-tags-fill text-accent-400"></i>
                <span class="text-white text-sm font-medium">Parcourir par catégorie</span>
            </div>
            
            <h1 class="text-5xl lg:text-7xl font-bold text-white mb-6 leading-tight">
                Nos <span class="gradient-text-accent">Catégories</span>
            </h1>
            
            <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto leading-relaxed">
                Explorez notre flotte par catégorie et trouvez le véhicule parfait qui correspond à vos besoins et votre budget.
            </p>
        </div>
    </div>
</section>

<!-- Categories Grid Section -->
<section class="py-16 lg:py-24 bg-gradient-to-b from-slate-50 to-white">
    <div class="container mx-auto px-4">
        {% if categories|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for categorie in categories %}
                    <a href="{{ path('app_voiture_index') }}?categorie={{ categorie.id }}" class="card card-hover group block">
                        <div class="p-8">
                            <!-- Icon Section -->
                            <div class="mb-6">
                                <div class="w-20 h-20 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-primary-500/30">
                                    {% set iconMap = {
                                        'SUV': 'bi-truck',
                                        'Berline': 'bi-car-front-fill',
                                        'Compacte': 'bi-battery-charging',
                                        'Familiale': 'bi-people-fill',
                                        'Sport': 'bi-speedometer2',
                                        'Luxe': 'bi-gem',
                                        'Utilitaire': 'bi-box-seam',
                                        'Coupé': 'bi-lightning-charge-fill',
                                        '4x4': 'bi-truck-front-fill'
                                    } %}
                                    
                                    {% set icon = 'bi-car-front' %}
                                    {% for key, value in iconMap %}
                                        {% if key in categorie.nom %}
                                            {% set icon = value %}
                                        {% endif %}
                                    {% endfor %}
                                    
                                    <i class="{{ icon }} text-white text-3xl"></i>
                                </div>
                            </div>
                            
                            <!-- Category Info -->
                            <h3 class="text-2xl font-bold text-slate-900 mb-3 group-hover:text-primary-600 transition-colors">
                                {{ categorie.nom }}
                            </h3>
                            
                            {% if categorie.description %}
                                <p class="text-slate-600 mb-4 line-clamp-3">
                                    {{ categorie.description }}
                                </p>
                            {% else %}
                                <p class="text-slate-600 mb-4">
                                    Découvrez notre sélection de véhicules {{ categorie.nom|lower }}.
                                </p>
                            {% endif %}
                            
                            <!-- Vehicle Count -->
                            <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                                <div class="flex items-center space-x-2">
                                    <span class="badge badge-primary">
                                        <i class="bi bi-car-front mr-1"></i>
                                        {{ categorie.voitures|length }} véhicule{{ categorie.voitures|length > 1 ? 's' : '' }}
                                    </span>
                                </div>
                                <div class="text-primary-600 group-hover:translate-x-2 transition-transform duration-300">
                                    <i class="bi bi-arrow-right text-xl"></i>
                                </div>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
            
            <!-- Statistics Section -->
            <div class="mt-16 bg-gradient-to-br from-primary-600 to-primary-700 rounded-3xl p-8 lg:p-12 text-white">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
                    <div>
                        <div class="text-5xl font-bold mb-2">{{ categories|length }}</div>
                        <p class="text-white/80">Catégorie{{ categories|length > 1 ? 's' : '' }} disponible{{ categories|length > 1 ? 's' : '' }}</p>
                    </div>
                    <div>
                        {% set totalVehicles = 0 %}
                        {% for categorie in categories %}
                            {% set totalVehicles = totalVehicles + categorie.voitures|length %}
                        {% endfor %}
                        <div class="text-5xl font-bold mb-2">{{ totalVehicles }}</div>
                        <p class="text-white/80">Véhicules au total</p>
                    </div>
                    <div>
                        <div class="text-5xl font-bold mb-2">24/7</div>
                        <p class="text-white/80">Service disponible</p>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="card max-w-2xl mx-auto text-center py-16">
                <div class="mb-6">
                    <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto">
                        <i class="bi bi-tags text-slate-400 text-5xl"></i>
                    </div>
                </div>
                <h4 class="text-2xl font-bold text-slate-900 mb-2">Aucune catégorie disponible</h4>
                <p class="text-slate-600 mb-6">Les catégories de véhicules seront bientôt disponibles.</p>
                <a href="{{ path('app_voiture_index') }}" class="btn-primary inline-flex items-center space-x-2">
                    <i class="bi bi-car-front"></i>
                    <span>Voir toutes les voitures</span>
                </a>
            </div>
        {% endif %}
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4">
        <div class="card bg-gradient-to-br from-slate-900 via-primary-900 to-slate-900 text-white p-8 lg:p-12 text-center max-w-4xl mx-auto">
            <h3 class="text-3xl lg:text-4xl font-bold mb-4">Prêt à réserver votre véhicule ?</h3>
            <p class="text-white/80 text-lg mb-8 max-w-2xl mx-auto">
                Parcourez nos catégories, choisissez votre véhicule idéal et réservez en quelques clics.
            </p>
            <div class="flex flex-wrap gap-4 justify-center">
                <a href="{{ path('app_voiture_index') }}" class="btn-primary inline-flex items-center space-x-2">
                    <i class="bi bi-car-front"></i>
                    <span>Voir toutes les voitures</span>
                </a>
                {% if not app.user %}
                    <a href="{{ path('app_register') }}" class="btn-outline-primary border-2 border-white text-white hover:bg-white hover:text-primary-600 inline-flex items-center space-x-2">
                        <i class="bi bi-person-plus"></i>
                        <span>S'inscrire gratuitement</span>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}
