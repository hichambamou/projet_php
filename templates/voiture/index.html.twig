{% extends 'base.html.twig' %}

{% block title %}Nos véhicules - MarokiCars{% endblock %}

{% block body %}
<!-- Page Header -->
<section class="hero-section py-16 lg:py-20 relative">
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl">
            <nav class="mb-6">
                <ol class="flex items-center space-x-2 text-white/70 text-sm">
                    <li><a href="{{ path('home') }}" class="hover:text-white transition-colors">Accueil</a></li>
                    <li><i class="bi bi-chevron-right text-xs"></i></li>
                    <li class="text-white">Nos véhicules</li>
                </ol>
            </nav>
            <h1 class="text-4xl lg:text-6xl font-bold text-white mb-4">Notre flotte de véhicules</h1>
            <p class="text-xl text-white/80 max-w-2xl leading-relaxed">
                Découvrez notre sélection de {{ voitures|length }} véhicules disponibles à la location. 
                Tous nos véhicules sont récents, bien entretenus et entièrement assurés.
            </p>
            {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                <div class="mt-6">
                    <a href="{{ path('app_voiture_new') }}" class="btn-primary inline-flex items-center space-x-2">
                        <i class="bi bi-plus-circle"></i>
                        <span>Ajouter une voiture</span>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- Vehicles Grid -->
<section class="py-12 lg:py-16 bg-white">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-8 pb-4 border-b border-slate-200">
            <div class="flex items-center space-x-3">
                <span class="badge bg-primary-100 text-primary-700 px-4 py-2">
                    <i class="bi bi-car-front mr-2"></i>
                    {{ voitures|length }} véhicule{% if voitures|length > 1 %}s{% endif %}
                </span>
            </div>
        </div>
        
        {% if voitures|length > 0 %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for voiture in voitures %}
                    <div class="card card-hover group">
                        <div class="relative overflow-hidden">
                            {% if voiture.photoPrincipale %}
                                <img src="{{ voiture.photoPrincipale }}" 
                                     alt="{{ voiture.marque }} {{ voiture.modele }}" 
                                     class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500">
                            {% else %}
                                <div class="w-full h-48 bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                                    <i class="bi bi-car-front text-slate-400 text-5xl"></i>
                                </div>
                            {% endif %}
                            
                            <div class="absolute top-3 right-3">
                                {% if voiture.statut == 'disponible' %}
                                    <span class="badge badge-success">
                                        <i class="bi bi-check-circle mr-1"></i>Disponible
                                    </span>
                                {% elseif voiture.statut == 'louee' %}
                                    <span class="badge badge-warning">
                                        <i class="bi bi-clock mr-1"></i>Louée
                                    </span>
                                {% else %}
                                    <span class="badge badge-danger">
                                        <i class="bi bi-x-circle mr-1"></i>Maintenance
                                    </span>
                                {% endif %}
                            </div>
                            
                            {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                            <div class="absolute top-3 left-3">
                                <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" 
                                   class="w-9 h-9 bg-white rounded-lg shadow-md flex items-center justify-center text-slate-700 hover:bg-primary-600 hover:text-white transition-all"
                                   title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            {% endif %}
                        </div>
                        
                        <div class="p-5">
                            <h3 class="text-xl font-bold text-slate-900 mb-2">{{ voiture.marque }} {{ voiture.modele }}</h3>
                            
                            <div class="flex flex-wrap gap-2 mb-4">
                                <span class="badge bg-slate-100 text-slate-700 text-xs">
                                    <i class="bi bi-calendar3 mr-1"></i>{{ voiture.annee }}
                                </span>
                                {% if voiture.nombrePlaces %}
                                <span class="badge bg-slate-100 text-slate-700 text-xs">
                                    <i class="bi bi-people mr-1"></i>{{ voiture.nombrePlaces }}
                                </span>
                                {% endif %}
                            </div>
                            
                            <div class="flex items-center justify-between mb-4 pb-4 border-b border-slate-200">
                                <div>
                                    <span class="text-2xl font-bold gradient-text">{{ voiture.prixParJour }}</span>
                                    <span class="text-slate-500 text-sm ml-1">MAD/j</span>
                                </div>
                            </div>
                            
                            <div class="space-y-2">
                                <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="btn-outline-primary w-full text-center text-sm py-2">
                                    <i class="bi bi-eye mr-1"></i>Détails
                                </a>
                                {% if voiture.statut == 'disponible' and app.user and 'ROLE_CLIENT' in app.user.roles %}
                                    <a href="{{ path('app_reservation_new_voiture', {'voitureId': voiture.id}) }}" class="btn-primary w-full text-center text-sm py-2">
                                        <i class="bi bi-calendar-check mr-1"></i>Réserver
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="card max-w-2xl mx-auto text-center py-16">
                <div class="mb-6">
                    <div class="w-24 h-24 bg-slate-100 rounded-full flex items-center justify-center mx-auto">
                        <i class="bi bi-car-front text-slate-400 text-5xl"></i>
                    </div>
                </div>
                <h4 class="text-2xl font-bold text-slate-900 mb-2">Aucune voiture disponible</h4>
                <p class="text-slate-600 mb-6">Il n'y a pas de véhicules dans la base de données pour le moment.</p>
                {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                    <a href="{{ path('app_voiture_new') }}" class="btn-primary inline-flex items-center space-x-2">
                        <i class="bi bi-plus-circle"></i>
                        <span>Ajouter une voiture</span>
                    </a>
                {% endif %}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
