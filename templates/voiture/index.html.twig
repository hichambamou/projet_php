{% extends 'base.html.twig' %}

{% block title %}Nos véhicules - MarokiCars{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-4 fw-bold mb-2">Notre flotte de véhicules</h1>
            <p class="text-muted">Découvrez notre sélection de véhicules disponibles</p>
        </div>
        {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
            <a href="{{ path('app_voiture_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Ajouter une voiture
            </a>
        {% endif %}
    </div>
    
    {% if voitures|length > 0 %}
        <div class="row g-4">
            {% for voiture in voitures %}
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="position-relative overflow-hidden">
                            {% if voiture.photoPrincipale %}
                                <img src="{{ voiture.photoPrincipale }}" class="card-img-top" alt="{{ voiture.marque }} {{ voiture.modele }}" style="height: 200px; object-fit: cover;">
                            {% else %}
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="bi bi-car-front text-white" style="font-size: 4rem;"></i>
                                </div>
                            {% endif %}
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-{{ voiture.statut == 'disponible' ? 'success' : (voiture.statut == 'louee' ? 'warning' : 'secondary') }} shadow">
                                    {{ voiture.statut|replace({'_': ' '})|title }}
                                </span>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column p-3">
                            <h5 class="card-title fw-bold mb-2">{{ voiture.marque }} {{ voiture.modele }}</h5>
                            <p class="text-muted small mb-3">
                                <i class="bi bi-calendar3 me-1"></i>{{ voiture.annee }}
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="h5 text-primary mb-0 fw-bold">{{ voiture.prixParJour }} <small class="text-muted fs-6">MAD</small></span>
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i>Détails
                                    </a>
                                    {% if voiture.statut == 'disponible' and app.user and 'ROLE_CLIENT' in app.user.roles %}
                                        <a href="{{ path('app_reservation_new_voiture', {'voitureId': voiture.id}) }}" class="btn btn-primary btn-sm">
                                            <i class="bi bi-calendar-check me-1"></i>Réserver
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <h4>Aucune voiture disponible</h4>
            <p>Il n'y a pas de véhicules dans la base de données pour le moment.</p>
            {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                <a href="{{ path('app_voiture_new') }}" class="btn btn-primary">Ajouter une voiture</a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}

