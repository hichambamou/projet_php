{% extends 'base.html.twig' %}

{% block title %}{{ voiture.marque }} {{ voiture.modele }} - MarokiCars{% endblock %}

{% block body %}
<!-- Breadcrumb Header -->
<section style="background: var(--dark-gradient); padding: 2rem 0; position: relative; overflow: hidden;">
    <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: radial-gradient(circle at 20% 50%, rgba(102,126,234,0.15) 0%, transparent 50%);"></div>
    <div class="container position-relative" style="z-index: 1;">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0" style="background: transparent;">
                <li class="breadcrumb-item">
                    <a href="{{ path('home') }}" class="text-decoration-none" style="color: rgba(255,255,255,0.7);">
                        <i class="bi bi-house-door me-1"></i>Accueil
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_voiture_index') }}" class="text-decoration-none" style="color: rgba(255,255,255,0.7);">
                        Voitures
                    </a>
                </li>
                <li class="breadcrumb-item active" style="color: white;">{{ voiture.marque }} {{ voiture.modele }}</li>
            </ol>
        </nav>
    </div>
</section>

<section class="container py-5">
    <div class="row g-5">
        <!-- Image Gallery -->
        <div class="col-lg-6">
            <div class="position-sticky" style="top: 100px;">
                {% if voiture.photoPrincipale %}
                    <div class="card border-0 overflow-hidden mb-4" style="border-radius: var(--radius-xl);">
                        <img src="{{ voiture.photoPrincipale }}" class="img-fluid" alt="{{ voiture.marque }} {{ voiture.modele }}" style="aspect-ratio: 4/3; object-fit: cover;">
                    </div>
                {% else %}
                    <div class="card border-0 overflow-hidden mb-4" style="border-radius: var(--radius-xl);">
                        <div class="bg-secondary d-flex align-items-center justify-content-center" style="aspect-ratio: 4/3;">
                            <i class="bi bi-car-front text-white" style="font-size: 8rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                {% endif %}
                
                {% if voiture.photos|length > 0 %}
                    <div class="row g-3">
                        {% for photo in voiture.photos|slice(0, 4) %}
                            <div class="col-3">
                                <div class="card border-0 overflow-hidden" style="border-radius: var(--radius-md); cursor: pointer;">
                                    <img src="{{ photo.url }}" class="img-fluid" alt="Photo {{ loop.index }}" style="aspect-ratio: 1; object-fit: cover;">
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Vehicle Details -->
        <div class="col-lg-6">
            <!-- Status & Actions -->
            <div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
                <span class="badge bg-{{ voiture.statut == 'disponible' ? 'success' : (voiture.statut == 'louee' ? 'warning' : 'secondary') }} fs-6">
                    <i class="bi bi-{{ voiture.statut == 'disponible' ? 'check-circle-fill' : (voiture.statut == 'louee' ? 'clock-fill' : 'x-circle-fill') }} me-2"></i>
                    {{ voiture.statut|replace({'_': ' '})|title }}
                </span>
                {% if 'ROLE_ADMIN' in app.user.roles|default([]) %}
                <div class="d-flex gap-2">
                    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Modifier
                    </a>
                </div>
                {% endif %}
            </div>
            
            <!-- Title -->
            <h1 class="display-5 fw-bold mb-4">{{ voiture.marque }} {{ voiture.modele }}</h1>
            
            <!-- Price Card -->
            <div class="card mb-4" style="background: linear-gradient(135deg, var(--bg-secondary) 0%, white 100%);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted small text-uppercase">Prix par jour</span>
                            <h2 class="mb-0 fw-bold gradient-text" style="font-size: 2.5rem;">{{ voiture.prixParJour }} <span class="fs-5">MAD</span></h2>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-primary px-3 py-2">
                                <i class="bi bi-shield-check me-1"></i>Assurance incluse
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Specs Grid -->
            <div class="card mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">
                        <i class="bi bi-gear-wide-connected me-2 gradient-text"></i>Caractéristiques
                    </h5>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-3 p-3" style="background: var(--bg-secondary); border-radius: var(--radius-md);">
                                <div style="width: 45px; height: 45px; background: var(--primary-gradient); border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-calendar3 text-white"></i>
                                </div>
                                <div>
                                    <span class="text-muted small">Année</span>
                                    <div class="fw-bold">{{ voiture.annee }}</div>
                                </div>
                            </div>
                        </div>
                        {% if voiture.nombrePlaces %}
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-3 p-3" style="background: var(--bg-secondary); border-radius: var(--radius-md);">
                                <div style="width: 45px; height: 45px; background: var(--success-gradient); border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-people-fill text-white"></i>
                                </div>
                                <div>
                                    <span class="text-muted small">Places</span>
                                    <div class="fw-bold">{{ voiture.nombrePlaces }}</div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        {% if voiture.typeCarburant %}
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-3 p-3" style="background: var(--bg-secondary); border-radius: var(--radius-md);">
                                <div style="width: 45px; height: 45px; background: var(--warning-gradient); border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-fuel-pump-fill" style="color: #1a1a2e;"></i>
                                </div>
                                <div>
                                    <span class="text-muted small">Carburant</span>
                                    <div class="fw-bold">{{ voiture.typeCarburant }}</div>
                                </div>
                            </div>
                        </div>
                        {% endif %}
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-3 p-3" style="background: var(--bg-secondary); border-radius: var(--radius-md);">
                                <div style="width: 45px; height: 45px; background: var(--secondary-gradient); border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-speedometer text-white"></i>
                                </div>
                                <div>
                                    <span class="text-muted small">Transmission</span>
                                    <div class="fw-bold">Automatique</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Description -->
            {% if voiture.description %}
            <div class="card mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-file-text me-2 gradient-text"></i>Description
                    </h5>
                    <p class="text-muted mb-0" style="line-height: 1.8;">{{ voiture.description }}</p>
                </div>
            </div>
            {% endif %}
            
            <!-- Action Buttons -->
            <div class="d-grid gap-3">
                {% if voiture.statut == 'disponible' and app.user and 'ROLE_CLIENT' in app.user.roles %}
                    <a href="{{ path('app_reservation_new_voiture', {'voitureId': voiture.id}) }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-calendar-check me-2"></i>Réserver maintenant
                    </a>
                {% elseif voiture.statut == 'disponible' and not app.user %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Connectez-vous pour réserver
                    </a>
                {% elseif voiture.statut != 'disponible' %}
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="bi bi-x-circle me-2"></i>Véhicule non disponible
                    </button>
                {% endif %}
                
                <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Related Vehicles Section (Optional) -->
<section style="background: var(--bg-secondary); padding: 4rem 0;">
    <div class="container">
        <div class="text-center mb-4">
            <h3 class="fw-bold">Autres véhicules disponibles</h3>
            <p class="text-muted">Découvrez d'autres options dans notre flotte</p>
        </div>
        <div class="text-center">
            <a href="{{ path('app_voiture_index') }}" class="btn btn-primary">
                <i class="bi bi-grid-3x3-gap me-2"></i>Voir tous les véhicules
            </a>
        </div>
    </div>
</section>
{% endblock %}
